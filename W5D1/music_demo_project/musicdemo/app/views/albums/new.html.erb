<h1>Create a new album</h1>

<form action="albums_url" method="post">
  <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">

  <label for="album_title">Title: </label>
  <input id='album_title' type="text" name="album[title]" value="">

  <label for="album_year">Year: </label>
  <input id='album_year' type="text" name="album[year]" value="">

  <label for='abum_band'l>Band</label>
  <select id='album_band' name='album[band_id]'>
    <% Band.all.each do |band| %>
      <option <%= "selected" if band.id == album.band_id %> value="<%=band.id%>"> <%= band.id %> </option>
    <% end %>
  </select>

  <label for="album_live">Live Album</label>
  <input type="radio" name="album[live_album]" value="t" <%="checked" if album.live_album%>>
  <label for="album_live_studio">Studio Album</label>
  <input type="radio" name="album[live_album]" value="f" <%="checked" if !album.live_album%>>

  <input type="submit" value="Create">

</form>
